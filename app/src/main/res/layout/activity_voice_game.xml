<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".VoiceGame.VoiceGameActivity"
    android:id="@+id/linVoice"
    android:clickable="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scoreViewVoice"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:text="Score : 0"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/relVoice">

            <!--insert play-->
            <ImageButton
                android:id="@+id/buttonPlayVoice"
                android:background="@android:color/transparent"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_play"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionsLayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear1">
                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Choice 1"
                    android:background="#ff888888"
                    android:textColor="#ffffff"
                    android:id="@+id/choice1Voice"
                    android:onClick="onChoice1"
                    android:nestedScrollingEnabled="false" />
                <Button
                    android:layout_width="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Choice 2"
                    android:background="#ff888888"
                    android:textColor="#ffffff"
                    android:id="@+id/choice2Voice"
                    android:onClick="onChoice2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linear1">
                <Button
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Choice 3"
                    android:background="#ff888888"
                    android:textColor="#ffffff"
                    android:id="@+id/choice3Voice"
                    android:onClick="onChoice3" />
                <Button
                    android:layout_width="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Choice 4"
                    android:background="#ff888888"
                    android:textColor="#ffffff"
                    android:id="@+id/choice4Voice"
                    android:onClick="onChoice4" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Next"
                android:id="@+id/nextVoice"
                android:onClick="goToNext" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>